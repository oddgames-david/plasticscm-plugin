pipeline {
    agent {
        node {
            label ''
        }
    }

    options {
        skipDefaultCheckout()
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Branch to build')
        string(name: 'WORKSPACE_NAME', defaultValue: 'TestWorkspace', description: 'Custom workspace name')
    }

    stages {
        stage('Checkout and Verify') {
            steps {
                script {
                    echo "Performing manual checkout into custom workspace: ${params.WORKSPACE_NAME}"

                    // Use ws() to change to custom workspace location
                    def workspaceRoot = sh(script: 'dirname ${WORKSPACE}', returnStdout: true).trim()
                    def customWorkspacePath = "${workspaceRoot}/${params.WORKSPACE_NAME}"

                    echo "Custom workspace path: ${customWorkspacePath}"

                    ws(customWorkspacePath) {
                        // Checkout from Plastic SCM
                        checkout scm
                        echo "✓ Checked out into: ${env.WORKSPACE}"

                        // Verify checkout
                        echo "Verifying PlasticSCM checkout..."
                        def hasPlastic = fileExists('.plastic')
                        if (hasPlastic) {
                            echo "✓ Plastic workspace detected"
                        } else {
                            echo "✗ No Plastic workspace found"
                        }

                        echo "✓ Jenkinsfile successfully loaded from Plastic SCM"
                        echo "✓ Parameter resolution working"

                        // Test custom workspace
                        echo "Testing custom workspace name feature..."
                        echo "Expected workspace: ${params.WORKSPACE_NAME}"

                        def workspacePath = sh(script: 'echo ${WORKSPACE}', returnStdout: true).trim()
                        def workspaceName = sh(script: 'basename ${WORKSPACE}', returnStdout: true).trim()

                        echo "Workspace path: ${workspacePath}"
                        echo "Workspace name: ${workspaceName}"

                        // Check if workspace name matches expected custom workspace name
                        if (workspaceName != params.WORKSPACE_NAME) {
                            error("✗ FAILED: Workspace name '${workspaceName}' does not match expected '${params.WORKSPACE_NAME}'")
                        } else {
                            echo "✓ Custom workspace name verified: ${workspaceName}"
                        }

                        // Verify we're in a Plastic workspace
                        sh 'cm status --machinereadable || echo "cm command not available (expected in test environment)"'

                        echo "✓ Custom workspace test completed"
                    }
                }
            }
        }

    }

    post {
        success {
            echo "===== Test Successful ====="
            echo "✓ PlasticSCM Plugin is working correctly"
            echo "✓ Jenkinsfile fetched from Plastic SCM"
            echo "✓ Parameter resolution verified"
            echo "✓ Custom workspace feature tested"
        }
        failure {
            echo "===== Test Failed ====="
            echo "Check the logs above for errors"
        }
    }
}
